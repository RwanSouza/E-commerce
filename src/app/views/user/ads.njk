  {% extends "layout.njk" %}

  {%import "parts/card.njk" as cards%}

  {% block content %}

  {%call cards.render('My ads', 'users-ads container')%}
     <div class="items">
       {% for product in products %}
          <div class="item">
            <div class="image"
              style="background-image: url({{product.image}})">
            </div>

            <div class="info">
              <div class="title">{product.name}}</div>
              <div class="price">{product.formattedPrice}}</div>
              <div class="published">Published in {product.formattedCreatedAt}}</div>
            </div>

            <div class="actions">
              <a href="/products/{{product.id}}/edit">Edit</a>
              <a href="/products/{{product.id}}">Show</a>
            </div>
          </div>
       {% endfor %}
     </div>
  {%endcall%}

  {% endblock content %}