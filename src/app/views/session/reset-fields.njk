  <div class="item">
    <div> Email </div>
      <div class="input"> 
        <input type="email" name="email" placeholder="Type your email" value="{{user.email}}"
          onblur="Validate.apply(this, 'isEmail')"
        />
      </div>
  </div>



  <div class="item">
    <div> Password </div>
      <div class="input"> 
        <input 
        type="password" 
        name="password" 
        placeholder="Type your password"
        />
      </div>
  </div>

   
    <div class="item">
    <div> Repeat Password </div>
      <div class="input"> 
        <input 
        type="password" 
        name="passwordRepeat" 
        placeholder="Type your password"
        />
      </div>
  </div>

  <input type="hidden" name="token" value="{{token}}">
