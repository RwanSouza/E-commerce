  {% extends "layout.njk" %}
  {%import "parts/card.njk" as card %}

  {% block content %}
    {%call card.render('Forgot Password', 'password container')%}

        <form  method="POST" action="/users/forgot-password" > 

            <div class="fields">

              <div class="item">
                <div> Email </div>
                  <div class="input"> 
                    <input type="email" name="email" placeholder="Type your email" value="{{user.email}}"
                      onblur="Validate.apply(this, 'isEmail')"
                    />
                  </div>
              </div>

            </div>  

            <button class="button" type="submit">Recover password</button>  
        </form>

    {%endcall%}
  {% endblock content %}